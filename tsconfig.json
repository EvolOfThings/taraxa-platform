{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@taraxa-claim/config": ["config"],
      "@taraxa-claim/common": ["src/modules/common"],
      "@taraxa-claim/auth": ["src/modules/auth"],
      "@taraxa-claim/claim": ["src/modules/claim"],
      "@taraxa-claim/unlocker": ["src/modules/unlocker"],
      "@taraxa-claim/blockchain": ["src/modules/blockchain"],
      "@taraxa-claim/scanner": ["src/modules/scanner"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
